{
  "name": "koa-api-server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "babel": "node_modules/.bin/babel",
    "babel-node": "node_modules/.bin/babel-node",
    "build": "npm run clean && npm run build:src",
    "build:src": "cross-env NODE_ENV=production npm run babel -- ./src -d ./lib",
    "bunyan": "node_modules/.bin/bunyan",
    "clean": "rimraf lib",
    "debug": "cross-env NODE_ENV=development npm run babel -- ./src --watch -d ./lib & npm run tail:dev",
    "dev": "cross-env NODE_ENV=development npm run nodemon | npm run bunyan",
    "lint": "eslint src; exit 0",
    "mocha": "cross-env NODE_ENV=test node_modules/.bin/mocha --recursive --compilers js:babel-register --require babel-polyfill",
    "nodemon": "node_modules/.bin/nodemon",
    "postinstall": "npm run build",
    "sequelize": "node_modules/.bin/sequelize",
    "start": "cross-env NODE_ENV=production node lib/server.js",
    "tail:dev": "tail -n 0 -f logs/development-debug.log | npm run bunyan",
    "tail:test": "tail -n 0 -f logs/test-debug.log | npm run bunyan",
    "test": "npm run -s mocha; exit 0",
    "test:unit": "npm run -s mocha -- test/unit; exit 0",
    "test:integration": "npm run -s mocha -- test/integration; exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjewell/koa-api-server.git"
  },
  "author": "Michael Jewell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mjewell/koa-api-server/issues"
  },
  "homepage": "https://github.com/mjewell/koa-api-server#readme",
  "dependencies": {
    "app-root-path": "^1.0.0",
    "axios": "^0.12.0",
    "base64url": "^1.0.6",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.4.0",
    "bunyan": "^1.8.1",
    "cross-env": "^1.0.7",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.0.1",
    "koa-cors": "0.0.16",
    "koa-passport": "^2.1.1",
    "koa-router": "^7.0.1",
    "lodash": "^4.11.1",
    "moment": "^2.13.0",
    "passport-local": "^1.0.0",
    "passport-token": "^0.1.3",
    "pg": "^4.5.6",
    "restify-errors": "^4.2.2",
    "rimraf": "^2.5.2",
    "sequelize": "^3.23.3",
    "sequelize-cli": "^2.4.0",
    "verror": "^1.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "database-cleaner": "^0.13.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^1.0.2",
    "eslint-plugin-react": "^5.0.1",
    "expect": "^1.18.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "sinon": "^1.17.4",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.2.0"
  }
}
